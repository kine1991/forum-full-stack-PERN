server {
  listen 80;

  server_name posts.com;

  location / {
    proxy_pass http://frontend:3000;
  }

  location /api {
    proxy_pass http://api:3001;
  }
}

server {
  listen 443 ssl;

  server_name posts.com;
  ssl_certificate /etc/nginx/ssl-sertificate/kronworld.xyz.crt
  ssl_certificate_key /etc/nginx/ssl-sertificate/kronworld.xyz.key

  location / {
    proxy_pass http://frontend:3000;
  }

  location /api {
    proxy_pass http://api:3001;
  }
}